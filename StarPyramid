 
//Class : Collection of methods and variables

// Class Syntax : 
      access, class, class name

// For loop : we know exactly how many times the loop will run

// While loop : loop will run till the specific condition is satisfied




package Day3;

public class Pyramid {

        public static void main(String[] args) {
            int rows = 4, k = 0;

            for (int i = 1; i <= rows; ++i, k = 0) {
                for (int a = 1; a <= rows - i; ++a) {
                    System.out.print("  ");
                }

                while (k != 2 * i - 1) {
                    System.out.print("* ");
                    ++k;
                }

                System.out.println();
            }
        }
    }
